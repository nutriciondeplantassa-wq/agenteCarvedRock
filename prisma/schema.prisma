generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UsageSession {
  id         String   @id @default(cuid())
  sessionId  String   @unique
  userId     String?
  startTime  DateTime @default(now())
  endTime    DateTime?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  logs       UsageLog[]
  threads    UsageThread[]

  @@index([userId])
  @@index([startTime])
}

model UsageLog {
  id            String   @id @default(cuid())
  sessionId     String
  session       UsageSession @relation(fields: [sessionId], references: [sessionId])

  threadId      String?
  model         String
  tokensInput   Int
  tokensOutput  Int
  tokensTotal   Int
  cost          Float

  timestamp     DateTime @default(now())
  createdAt     DateTime @default(now())

  @@index([sessionId])
  @@index([threadId])
  @@index([timestamp])
  @@index([model])
}

model DailyAggregate {
  id            String   @id @default(cuid())
  date          DateTime @unique

  totalRequests Int      @default(0)
  tokensInput   Int      @default(0)
  tokensOutput  Int      @default(0)
  tokensTotal   Int      @default(0)
  totalCost     Float    @default(0)

  modelBreakdown Json?

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([date])
}

model UsageThread {
  id        String   @id @default(cuid())
  sessionId String
  threadKey String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  session UsageSession @relation(fields: [sessionId], references: [sessionId])
  models  UsageThreadModel[]

  @@unique([sessionId, threadKey])
  @@index([sessionId])
}

model UsageThreadModel {
  id            String   @id @default(cuid())
  usageThreadId String
  model         String
  tokensInput   Int      @default(0)
  tokensOutput  Int      @default(0)
  tokensTotal   Int      @default(0)
  cost          Float    @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  usageThread UsageThread @relation(fields: [usageThreadId], references: [id])

  @@unique([usageThreadId, model])
  @@index([model])
}
